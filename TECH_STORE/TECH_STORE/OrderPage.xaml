<Page x:Class="TECH_STORE.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TECH_STORE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage" Loaded="Page_Loaded">

    <Grid Background="White">
        <DataGrid x:Name="dtgOrder" HorizontalAlignment="Left" Height="137" Margin="10,66,0,0" VerticalAlignment="Top" Width="413" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dtgOrder_SelectionChanged"/>
        <Button x:Name="btnPrev" Content="Prev" HorizontalAlignment="Left" Height="20" Margin="258,271,0,0" VerticalAlignment="Top" Width="69" Click="btnPrev_Click"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left" Height="20" Margin="353,271,0,0" VerticalAlignment="Top" Width="70" Click="btnNext_Click"/>
        <Label x:Name="lblPage" Content="1" HorizontalAlignment="Left" Margin="332,268,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.548,0.527"/>
        <DataGrid x:Name="dtgOrderDetail" HorizontalAlignment="Left" Height="259" Margin="441,66,0,0" VerticalAlignment="Top" Width="306" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Page>
